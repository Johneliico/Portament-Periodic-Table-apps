<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="LightTheme.Preferences" parent="Theme.AppCompat.Light.DialogWhenLarge" />

    <style name="LightTheme" parent="Theme.AppCompat.Light">
    </style>


    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="fgColor">@android:color/primary_text_dark</item>
        <item name="bgColor">@android:color/black</item>

    </style>

    <style name="DarkTheme.Preferences" parent="Theme.AppCompat.DialogWhenLarge" />

    <style name="ElementDetails" parent="android:TextAppearance.Medium">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="ElementDetails.Label">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|end</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="ElementDetails.Value">
        <item name="android:textIsSelectable" tools:ignore="NewApi">true</item>
    </style>

    <style name="Link" parent="ElementDetails">
        <item name="android:textColor">#FF4F8FFF</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="TableRow">
    <item name="android:background">#C6C6C6</item>
    </style>

    <style name="TableRow.Odd">
        <item name="android:background">#FF9C9C9C</item>
    </style>

</resources>